<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_book" /> <!-- Placeholder image -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã sách: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_name_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại sách: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá mua: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/book_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng tồn: "
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>
