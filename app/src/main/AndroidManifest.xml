<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo_icon"
        android:label="Thư viện"
        android:localeConfig="@xml/locales_config"
        android:roundIcon="@drawable/ic_logo_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.App_TV"
        tools:targetApi="31">

        <!-- MainActivity - Activity chính của ứng dụng -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.HomeActivity"
            android:exported="true"></activity>

        <!-- LoginActivity - Activity cho màn hình đăng nhập -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" />

        <activity
            android:name=".activities.RegisterActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <!-- BookManagementActivity - Activity quản lý sách -->
        <activity
            android:name=".activities.BookManagementActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.MemberManagementActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />


        <!-- BorrowSlipManagementActivity - Activity quản lý phiếu mượn -->
        <activity
            android:name=".activities.BorrowSlipManagementActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <!-- ChangePasswordActivity - Activity đổi mật khẩu -->
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <!-- EmployeeManagementActivity - Activity quản lý nhân viên -->
        <activity
            android:name=".activities.SupplierManagementActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.CategoryManagementActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.AdminActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.NewsActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.NewsDetailActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.BookOrderManagementActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.ReportActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".activities.ReportChartActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <!-- Quyền cần thiết -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
